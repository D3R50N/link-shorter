<!DOCTYPE html>
<html>

<head>
    <title>Expresso - LinkShorter</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/home.css">
    <style>
        .container {
            background-color: #fff1;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1em;
            width: 30%;
        }


        input[type="url"] {
            width: 100%;
            padding: 0.5rem;
        }

        button {
            width: 100%;
            padding: 0.5rem;
            background-color: var(--main-color);
            color: black;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition-duration: .2s;
            font-weight: bold;
        }

        button:hover {
            background-color: #000;
            color: var(--main-color);
        }

        #result {
            text-align: center;
            display: none;
        }

        a {
            text-decoration: none;
            color: white;
            background-color: #000;
            padding: 0.5rem;
            border-radius: 4px;
            transition-duration: .2s;
        }
    </style>
</head>

<body>
    <img src="<%=image %>" alt=" ">
    <h1>You're login as <span id="name"><%= name %></span> ðŸš€</h1>
    <div class="container">
        <input type="url" id="longUrl" placeholder="Enter long URL here...">
        <button onclick="shortenUrl()">Shorten URL</button>
        <div id="result"></div>
    </div>

    <script>
        async function shortenUrl() {
            const longUrl = document.getElementById('longUrl').value;
            const resultDiv = document.getElementById('result');

            function foundTkCookie() {
                let tkToken = "_tk=";
                let decodedCookie = decodeURIComponent(document.cookie);
                let ca = decodedCookie.split(';');

                let token = ca.find((c) => c.includes(tkToken));
                if (token) {
                    return token.split('=')[1];
                }
                return null;
            }
          

            try {
                const response = await fetch('/api/urls/shorten', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${foundTkCookie()}`,
                    },
                    body: JSON.stringify({
                        url: longUrl
                    }),
                });

                resultDiv.style.display = 'block';
                const data = await response.json();
                if (!response.ok) {
                    throw new Error(data.error||data.message || 'Something went wrong!');
                }

                resultDiv.style.color = 'white';
                resultDiv.innerHTML =
                    `URL courte : <a href="${data.shortUrl}" target="_blank">${data.shortUrl}</a>`;
            } catch (error) {
                resultDiv.style.color = 'red';
                resultDiv.innerHTML = `${error.message || error}`;
            }
        }
    </script>
    <a href="/logout" id="btn_logout">LOGOUT â†ª</a>

</body>

</html>